@page "/counter"

<h1>Counter</h1>

<p>Current count: @xn</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int xn = 0;
    private int x1 = 0;
    private int x2 = 1;

    private void IncrementCount()
    {
        xn = x1 + x2;
        x1 = x2;
        x2 = xn;
    }
}
